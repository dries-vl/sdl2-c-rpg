{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run SDL2 Application",
            "type": "shell",
            "command": "${workspaceFolder}/Run.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "close": true
            },
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "^$",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.*",
                        "endsPattern": "^.*"
                    }
                }
            ]
        }
    ]
}